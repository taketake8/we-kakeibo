= render "devise/shared/header" 
.devise
  .devise__contents-devise
    .devise__contents-devise__content-devise
      %h2 新規会員登録
      .devise-form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .devise-field
            .devise-field__devise-name
              = f.label :email
            .devise-field__devise-date
              = f.email_field :email, autofocus: true, autocomplete: "email"
          .devise-field
            .devise-field__devise-name
              = f.label :ニックネーム
            .devise-field__devise-date
              = f.text_field :nickname, autofocus: true
          .devise-field
            .devise-field__devise-name
              = f.label :年齢
            .devise-field__devise-date
              = f.number_field :age, autofocus: true
          .devise-field
            .devise-field__devise-name
              = f.label :password
            .devise-field__devise-date
              = f.password_field :password, autocomplete: "new-password",placeholder: "英数字6文字以上"
          .devise-field
            .devise-field__devise-name
              = f.label :password_confirmation
            .devise-field__devise-date
              = f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "英数字6文字以上(確認用)"
          .actions
            = f.submit "新規会員登録"
