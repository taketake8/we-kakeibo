= render "pays/header"
.pay-categories
  .pay-categories__contents-pay-categories
    .pay-categories__contents-pay-categories__content-pay-categories
      %h2 カテゴリー
      .pay-categories-form
        = form_with(model: @pay_category,id:"pay-category-form") do |form|
          - if @pay_category.errors.any?
            #error_explanation
              %h2
                = pluralize(@pay_category.errors.count, "エラー")
                のため保存ができません:
              %ul
                - @pay_category.errors.full_messages.each do |message|
                  %li= message
      
          .pay-categories-field
            .pay-categories-field__pay-categories-name
              = form.label :追加するカテゴリーの名前
            .pay-categories-field__pay-categories-date
              = form.text_field:name 
          .pay-categories-actions
            = form.submit :支出を入力
      .pay-categories-menus
        = render @pay_categories
        .pay-categories-menus__pay-categories-paginate
          = paginate(@pay_categories)


  
